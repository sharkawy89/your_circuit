# Example environment variables for Next-circuit
# Copy to .env and set values for your environment before starting the server or deploying.

# Server
PORT=5000
HOST=0.0.0.0

# Frontend: set to your production frontend URL (Vercel/Netlify/etc.)
FRONTEND_URL=https://your-frontend.example.com

# firebase connection string
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"your-private-key-id","private_key":"-----BEGIN PRIVATE"}


# JWT secret for auth
JWT_SECRET=replace_with_a_strong_secret
JWT_EXPIRES_IN=7d

# Optional: when running locally you can override
NODE_ENV=production
